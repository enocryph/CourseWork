<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8" />

    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <link href="https://fonts.googleapis.com/css?family=Jura:400,500,600&amp;subset=cyrillic-ext" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap-theme.min.css') }}">
    {% block stylesheets %}
    {% endblock %}


    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    {% block javascripts %}
    {% endblock %}

</head>
<body>

{% if is_granted('ROLE_USER') %}
<div class="dropdown">
    <button class="dropbtn">Controls</button>
    <div class="dropdown-content">
        {% if is_granted('ROLE_ADMIN') %}
            <a href=" {{ path('user_index') }}">Users grid panel</a>
        {% endif %}
        {% if is_granted('ROLE_MODERATOR') %}
            <a href=" {{ path('product_index') }}">Products grid panel</a>
            <a href=" {{ path('category_index') }}">Category panel</a>
            <a href=" {{ path('category_new') }}">Category new</a>
            <a href=" {{ path('product_new') }}">Product new</a>
        {% endif %}
        <a href=" {{ path('homepage') }}">Homepage</a>
        <a href=" {{ path('catalog_index') }}">Catalog</a>


    </div>
</div>
{% endif %}
{% block body %}{% endblock %}

</body>
</html>
