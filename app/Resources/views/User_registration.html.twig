{% extends 'base.html.twig' %}
{% block title %}Register Page{% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="vertical-middle">
        <div class="col-md-4 col-md-offset-4">
            <h3>Registration</h3>
            {{ form_start(form) }}
            {% if errors %}
                <div class="alert alert-danger">
                    {{ errors }}
                </div>
            {% endif %}
c            <div class="form-group">
                    {{ form_row(form.name, {'attr': {'class': 'form-control'},
                                            'label_attr': {'class': 'control-label'}
                                            })
                    }}
                    {{ form_row(form.email, {'attr': {'class': 'form-control'},
                                            'label_attr': {'class': 'control-label'}
                                            })
                    }}
                    {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control'},
                                                          'label_attr': {'class': 'control-label'}
                                                          })
                    }}
                    {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control'},
                                                           'label_attr': {'class': 'control-label'}
                                                           })
                    }}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default btn-150px">
                    <i class="fa fa-btn fa-sign-in"></i> Register
                </button>
            </div>
            {{ form_end(form) }}
        </div>
        <footer class="footer">
            <p class="footer-text">
                Git repository <a href="https://github.com/enocryph/CourseWork"
                                  class="link-border-animation link-black">here</a>.
            </p>
        </footer>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    <style>
        html, body {
            height: 100%;
            box-sizing: border-box;
        }
        .page-wrapper {
            display: table;
            width: 100%;
            height: 100%;
            min-height: 100%;
            box-sizing: border-box;
            background: #fafafa;
        }
        .vertical-middle {
            width: 100%;
            display: table-cell;
            vertical-align: middle;
            text-align: center;
            font-size: 0;
        }
        .btn-150px {
            width: 150px;
        }

        .footer {
            position: absolute;
            bottom: 0;
            display: table-cell;
            height: 30px;
            width: 100%;
            font-size: 12px;
        }

        .link-border-animation {
            border: none;
            border-bottom: 1px solid transparent;
            text-decoration: none;
            transition: .5s;
        }

        .link-border-animation:hover,
        .link-border-animation:active {
            transition: 1s;
            text-decoration: none;
        }

        .link-orange {
            color: #e88e57;
        }
        .link-orange:hover {
            border-color: #e88e57;
            color: #e88e57;
        }
        .password-reset-wrapper {
            font-size: 14px;
            margin: 0;
        }



        .control-label {
            font-size: 14px;
        }
        .alert {
            font-size: 14px;
        }
    </style>
{% endblock %}
