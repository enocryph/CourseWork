{% extends 'base.html.twig' %}
{% block title %}Product's Catalog Main Page{% endblock %}
{% block body %}
    <div class="main-page-wrapper">
        <div class="vertical-middle">
            <h1 class="project-name">Course Work Product's Catalog</h1>
            <p class="project-description">Shit Happens</p>
            <a href="/login" class="btn btn-default btn-150px btn-margin">Login</a>
            <a href="/register" class="btn btn-default btn-150px">Register</a>
            <p class="user-greetings">Hello,
                <span class="username">Соня Мармеладова</span>,
                start using
                <a href="#" class="link-border-animation link-orange">Catalog</a>
                now!
            </p>
            <footer class="footer">
                <p class="footer-text">
                    Git repository <a href="https://github.com/enocryph/CourseWork"
                                      class="link-border-animation link-black">here</a>.
                </p>
            </footer>
        </div>

    </div>
{% endblock %}

{% block stylesheets %}
<style>
    html, body {
        height: 100%;
        box-sizing: border-box;
    }
    .main-page-wrapper {
        display: table;
        width: 100%;
        height: 100%;
        min-height: 100%;
        box-sizing: border-box;
        background: #fafafa;
    }
    .vertical-middle {
        width: 100%;
        display: table-cell;
        vertical-align: middle;
        text-align: center;
        font-size: 0;
    }
    .project-name {
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.27);
        margin-top: 0;
        color: #333;
        font-size: 36px;
    }

    .project-description {
        font-size: 24px;
        color: #333;
    }
    .btn-150px {
        width: 150px;
    }

    .btn-margin {
        margin-left: 10px;
        margin-right: 10px;
    }

    .footer {
        position: absolute;
        bottom: 0;
        display: table-cell;
        height: 30px;
        width: 100%;
        font-size: 12px;
    }

    .link-border-animation {
        border: none;
        border-bottom: 1px solid transparent;
        text-decoration: none;
        transition: .5s;
    }

    .link-border-animation:hover,
    .link-border-animation:active {
        transition: 1s;
        text-decoration: none;
    }

    .user-greetings {
        font-size: 18px;
        margin-top: 10px;
    }

    .username {
        font-weight: bold;
    }

    .link-orange {
        color: #e88e57;
    }
    .link-black {
        color: #000;
    }

    .link-orange:hover {
        border-color: #e88e57;
        color: #e88e57;
    }
    .link-black:hover {
        border-color: #000;
        color: #000;
    }
</style>
{% endblock %}
